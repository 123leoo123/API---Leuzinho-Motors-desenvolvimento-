generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  cpf String @unique
  password String
  residence String
  automobile Automobile[]
}

model Automobile {
  id Int @id @default(autoincrement())
  model String
  year Int
  plate String
  mileage Int
  photos Photo[]
  color String
  price Float
  options String[]
  description String?
  brandId Int
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  brand Brand @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

model Brand {
  id Int @id @default(autoincrement())
  name String
  description String?
  models String[]
  modelsCount Int
  automobile Automobile[] 
}

model Photo {
  id Int @id @default(autoincrement())
  automobileId Int
  height Int
  width Int
  automobile Automobile @relation(fields: [automobileId], references: [id], onDelete: Cascade)
}